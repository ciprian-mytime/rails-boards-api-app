<%= form_with model: [@story.column.board, @story.column, @story], local: true do |form| %>
  <div>
    <%= form.label :column_id %>
    <%= form.select :column_id,
      options_from_collection_for_select(@story.column.board.columns, :id, :title, @story.column_id)
    %>
  </div>
  <br>
  
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :order %>
    <%= form.text_field :order %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div>
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>
  <div>
    <%= form.label :due_date %>
    <%= form.date_select :due_date %>
  </div>
  <br>  

  <% if story.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
        <% story.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
